<Window x:Class="WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF"
        mc:Ignorable="d"
        Title="Алгоритмы сжатия данных" Height="450" Width="800" MinHeight="450" MinWidth="800" FontFamily="Verdana" FontSize="18">
    <StackPanel>
        <Menu FontFamily="Verdana">
            <MenuItem Header="Файл" FontSize="17">
                <MenuItem Header="Открыть"/>
                <MenuItem Header="Закрыть"/>
                <Separator/>
                <MenuItem Header="Сохранить"/>
                <MenuItem Header="Сохранить как"/>
                <Separator/>
                <MenuItem x:Name="MenuAlgorithms" Header="Выйти"/>
            </MenuItem>
            <MenuItem Header="Алгоритмы" FontSize="17">
                <MenuItem Header="Коды Хаффмана">
                    <MenuItem Header="Закодировать" Click="MenuItem_Click"/>
                    <MenuItem Header="Декодировать" Click="MenuItem_Click"/>
                </MenuItem>
            </MenuItem>
        </Menu>

    </StackPanel>
</Window>
